<body>
<div id="Wrapper" style="POSITION: relative">
     <div id="swap_from">
          <div id="screen_body" class="container">
               <table class="layout">
                  <tr>
                     <td class="left">
                        <div class="Left">
                           <div class="col">
                              <div class="page_header">
                                <span class="other_indexes">
                                    <%= link_to 'Voltar', :controller => 'profile', :action => 'index' %>
                                </span>

                                <h1>
                                    Idioma
                                </h1>
                              </div>

                              <% form_for :idiom, :url => "update" do |f| %>
                              <%= f.hidden_field :curriculum_id, :value => @curriculum.id %>
                              <div class="innercol">
                                <%= f.error_messages %>
                                <div id="basic_form">
                                  <div class="block">
                                    <dl>
                                      <dt class="required"><%= label(:idiom, 'Nome:') %></dt>
                                      <dd>
                                        <div id="idiom">
                                            <%= f.text_field :name, :size => 20 %>
                                            &nbsp;
                                            <% for degree in Idiom::DEGREE %>
                                                <%= f.radio_button(:degree, degree) %> <span style="vertical-align:middle;"><%= degree %></span>
                                            <% end %>
                                        </div>
                                      </dd>
                                    </dl>
                                  </div>
                                  <% end %>

                                 <div class="action">
                                    <table align="right">
                                        <tr>
                                            <td colspan="3"><%= submit_tag 'Salvar', :class => 'button' %></td>
                                            <td><%= button_to 'Excluir', idiom_path(@idiom), :method => :delete %></td>
                                        </tr>
                                    </table>
                                   <br>
                                 </div>

                        </div></div></div>
                     </td>
                     <td class="right"></td>
                  </tr>
               </table>
          </div>
     </div>
</div>
</body>