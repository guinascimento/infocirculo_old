<body>

<div id="center">
	<table class="layout">
		<tr>
			<td class="left">
				<div class="Left">
					<div class="col">
						<div class="page_header">
							<h1>Inbox</h1>
						</div>

						<div class="innercol">
							<div id="Main" class="">
								<h3 class="Tab">
									<span class="TabOut"><%= link_to @folder.name, :controller => "mailbox", :action => "index" %> <span class="unread_count">(<%= @messages.size %>)</span></span>
									<span class="TabIn"><%= link_to "Enviados" %></span>
							</h3>

							<table id="mail" cellspacing="0" width="100%">
								<tr valign="bottom">
									<th>&nbsp;</th>
									<th>De</th>
									<th><a href="/mail?sort=subj&dir=down" title="Order by subject">Assunto</a></th>
									<th><a href="/mail?&sort=date&dir=up" title="Order by date">Data</a> &uarr;</th>
								</tr>

								<% for message in @messages %>	
									<tr class="message_row  unread">
										<td class="mail_icon"><div class="mail_icon mail_indicator"><a class="toggler" id="toggler_72057594042647006" title="Click to mark this message as read"><img src="http://l.yimg.com/g/images/spaceball.gif" width="16" height="16" alt="Click to mark this message as read" title=""></a></div></td>
										<td class="fromto"><%=h message.recipients.map(&:name).to_sentence %></td>
										<td class="subj"><a href=""><%= link_to h(message.subject), sent_path(message) %></a></td>
										<td class="date"><%= distance_of_time_in_words(message.created_at, Time.now) %> atrás</td>
									</tr>
								<% end %>
							</table>
							<%= will_paginate @messages %>
						</div>
					<div>
				</div>
			</td>
			<td class="right"></td>
		</tr>
	</table>
</div>

</body>