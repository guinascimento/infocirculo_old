<div id="Wrapper" style="position: relative;">
     <div id="swap_from">
          <div id="screen_body" class="container">
               <table class="layout">
                  <tr>
                     <td class="left">
                        <div class="Left">
                           <div class="col">
                              <div class="page_header">
                                 <h1>Perfil</h1>
                              </div>
                              <%= flash_message %>
                              <div class="innercol">
                                <div id="head_informations">
                                    <ul>
                                        <span class="name"><%= full_name %></span> <span class="edit">[<%= link_to "Editar", :controller => "account" %>]</span>
                                        <li><%= @profile.user.professional_description %> - <%= @profile.user.industry.name %></li>
                                        <li><%= @profile.user.email %></li>
                                    </ul>
                                </div>

                                <% if @profile %>
                                <div id="">
                                    <h2>Informações Pessoais <span class="edit">[<%= link_to "Editar", :controller => "profile", :action => "personal_informations" %>]</span></h2>
                                    <div class="block categories">
                                        <ul id="message_categories">
                                            <li id="">Telefone: <%= @profile.phone %></li>
                                            <li id="">Endereço: <%= @profile.address %></li>
                                            <li id="">IM: <%= full_im %></li>
                                            <li id="">Estado Civíl: <%= @profile.maritial_status %></li>
                                        </ul>
                                    </div>
                                </div>

                                <div id="summary">
                                    <h2>Resumo <span class="edit">[<%= link_to "Editar", { :controller => "profile", :action => "summary" } %>]</span></h2>
                                    <div class="block categories">
                                        <ul id="message_categories">
                                            <li id=""><%= @profile.summary %></li>
                                        </ul>
                                    </div>
                                </div>


                                <div id="professional_experience">
                                    <h2>Experiência Profissional <span class="edit">[ <img src="images/plus.PNG" width="15px" height="15px"> <%= link_to "Adicionar", new_experience_path %> ]</span></h2>
                                    <% for experience in @profile.experiences %>
                                        <div class="block categories">
                                            <ul id="message_categories">
                                                <li></li>
                                                <li id=""><b><%= experience.title %> - <%= experience.company_name %></b> [ <span class="edit"><%= link_to "Editar", edit_experience_path(experience) %> ]</span></li>
                                                <% if experience.end != nil %>
                                                    <li id=""><%= experience.start %> a <%= experience.end %></li>
                                                <% else %>
                                                    <li id=""><%= experience.start %></li>
                                                <% end %>
                                                <li id=""><%= experience.description %></li>
                                              <li></li>
                                            </ul>
                                        </div>

                                    <% end %>
                                </div>

                               <div id="education">
                                    <h2>Educação <span class="edit">[ <img src="images/plus.PNG" width="15px" height="15px"> <a href="">Adicionar </a>]</span></h2>
                                    <% for education in @profile.educations %>
                                        <div class="block categories">
                                            <ul id="message_categories">
                                                <li id=""><%= education.school_name %></li>
                                                <li id=""><%= education.activities %></li>
                                            </ul>
                                        </div>
                                     <% end %>
                               </div>
                               <% end %>
                        </div>
                     </td>
                     <td class="right">
                       <div class="Right">
                <div class="col">

  <h1>Opções</h1>

  <div class="people">
    <div class="contact" id="firm_employee_3809931">

        Envie seu perfil para um amigo.
      <br><br>
    <img src="images/print.PNG">
    <img src="images/pdf.PNG">

                     </td>
                  </tr>
               </table>
          </div>
     </div>
</div>